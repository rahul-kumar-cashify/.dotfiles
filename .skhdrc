# Open applications
cmd - 2 : open -a "wezterm"
cmd - 3 : open -a "microsoft edge"
cmd - 4 : open -a "visual studio code"
cmd - 7 : open -a "brave browser"
cmd - 9 : open -a "microsoft outlook"
cmd - 0 : open -a "notion"

# normal shell script open -a "finder" does not bring out application to front
cmd - 8 : osascript -e 'tell application "Finder" to reopen activate'


# Window resizing and movement
ctrl + cmd - right : osascript ~/.dotfiles/resizeAndMoveWindow.scpt right-half
ctrl + cmd - left : osascript ~/.dotfiles/resizeAndMoveWindow.scpt left-half
ctrl + cmd - up: osascript ~/.dotfiles/resizeAndMoveWindow.scpt top-half
ctrl + cmd - down : osascript ~/.dotfiles/resizeAndMoveWindow.scpt bottom-half
ctrl + cmd - f : osascript ~/.dotfiles/resizeAndMoveWindow.scpt maximize


# Play video with MPV
ctrl + cmd - space : osascript ~/.dotfiles/play_video_mpv.scpt

