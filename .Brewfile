# Install:
#   brew bundle --global
# Sync (cleanup):
#   brew bundle --global --force cleanup

# To install everything in this file, run:
#   brew bundle --file=~/.Brewfile

# Set install directory for apps and enforce SHA checks
cask_args appdir: "/Applications", require_sha: true

# Additional taps
tap "homebrew/cask-fonts"

# CLI tools
brew "fzf"
brew "git"
brew "gh"
brew "jq"
brew "neovim"
brew "tmux"

# GUI apps
cask "wezterm"
cask "hammerspoon"
cask "alfred"
cask "dbeaver-community"
cask "karabiner-elements"
cask "maccy"
cask "notion"

# Fonts
cask "font-jetbrains-mono"

